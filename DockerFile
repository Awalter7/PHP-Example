# ─── Base PHP + Node Image ───
FROM php:8.1-cli

# ─── Install System Tools, Node.js, npm, and PHP extensions ───
RUN apt-get update \
 && apt-get install -y --no-install-recommends \
      curl gnupg zip unzip libzip-dev \
      git \
 && curl -fsSL https://deb.nodesource.com/setup_18.x | bash - \
 && apt-get install -y nodejs \
 && docker-php-ext-configure zip \
 && docker-php-ext-install \
      pdo_mysql \
      zip \
 && rm -rf /var/lib/apt/lists/*

# ─── Install Composer globally (and allow it to use unlimited memory) ───
ENV COMPOSER_ALLOW_SUPERUSER=1 \
    COMPOSER_MEMORY_LIMIT=-1
RUN curl -sS https://getcomposer.org/installer | php -- \
     --install-dir=/usr/local/bin --filename=composer

WORKDIR /app

# ─── Install PHP dependencies ───
COPY composer.json composer.lock ./
RUN composer install --no-dev --optimize-autoloader --no-interaction --prefer-dist

# ─── Install JS dependencies ───
COPY package.json package-lock.json ./
RUN npm ci

# ─── Copy the rest of your application ───
COPY . .

# ─── Expose port and launch your custom command ───
EXPOSE 8080
CMD ["php", "artisan", "serve:dev"]
