# ─── Base Image with PHP CLI ───
FROM php:8.1-cli

# ─── Install OS Dependencies + Node.js/npm ───
RUN apt-get update && apt-get install -y \
    curl gnupg zip unzip git \
  && curl -fsSL https://deb.nodesource.com/setup_18.x | bash - \
  && apt-get install -y nodejs \
  && docker-php-ext-install pdo pdo_mysql \
  && rm -rf /var/lib/apt/lists/*

# ─── Install Composer ───
RUN curl -sS https://getcomposer.org/installer | php -- \
  --install-dir=/usr/local/bin --filename=composer

WORKDIR /app

# ─── Pull in PHP dependencies ───
COPY composer.json composer.lock ./
RUN composer install --no-dev --optimize-autoloader

# ─── Pull in JS dependencies ───
COPY package.json package-lock.json ./
RUN npm ci

# ─── Copy your app code ───
COPY . .

# ─── Expose Laravel’s default port ───
EXPOSE 8080

# ─── Run your custom serve:dev (artisan spins up PHP & npm runs Vite) ───
CMD ["php", "artisan", "serve:dev"]
